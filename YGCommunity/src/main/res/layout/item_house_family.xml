<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄玉才"
            android:textColor="#000000"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/sex"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginStart="30px"
            android:src="@mipmap/pic_house_man" />

        <TextView
            android:id="@+id/relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:text="父亲"
            android:textColor="#000000"
            android:textSize="45px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:text="户籍社员"
            android:textColor="#000000"
            android:textSize="45px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/pic_house_time" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:text="1969-12-03"
            android:textColor="#000000"
            android:textSize="45px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/pic_house_tell" />

        <TextView
            android:id="@+id/tell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:text="13921912345"
            android:textColor="#000000"
            android:textSize="45px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/pic_house_job" />

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:text="销售员"
            android:textColor="#000000"
            android:textSize="45px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/pic_house_id" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:text="1111111111111111"
            android:textColor="#000000"
            android:textSize="45px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30px"
        android:background="#E1E1E1"/>

</LinearLayout>