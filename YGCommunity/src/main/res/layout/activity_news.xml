<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlank"
    android:orientation="vertical"
    tools:context="com.yonggang.ygcommunity.Activity.NewsActivity">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorBlank">

        <ImageView
            android:id="@+id/img_finish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/pic_back" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/news_menu" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#C0C2CC" />

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tencent.smtt.sdk.WebView
                android:id="@+id/news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.tencent.smtt.sdk.WebView>

            <LinearLayout
                android:id="@+id/layout_shared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/text_login_edit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/magin_10"
                        android:text="分享到"
                        android:textColor="@color/text_login_edit"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/text_login_edit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40px"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_shared_zan"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/pic_shared_zan1" />

                        <TextView
                            android:id="@+id/txt_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="121赞"
                            android:textColor="#666666"
                            android:textSize="30px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40px"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_shared_all"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/pic_shared_cycle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="朋友圈"
                            android:textColor="#666666"
                            android:textSize="30px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40px"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_shared_one"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/pic_shared_wechat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="微信"
                            android:textColor="#666666"
                            android:textSize="30px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40px"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_shared_qq"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/pic_shared_qq" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="QQ"
                            android:textColor="#666666"
                            android:textSize="30px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40px"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_shared_weibo"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/pic_shared_sina" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="微博"
                            android:textColor="#666666"
                            android:textSize="30px" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF">

                <com.yonggang.ygcommunity.View.LinearLayoutForListView
                    android:id="@+id/list_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.yonggang.ygcommunity.View.LinearLayoutForListView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#C0C2CC" />

    <LinearLayout
        android:id="@+id/layout_foot"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#FFFFFF"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_input"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginStart="50px"
                android:src="@mipmap/pic_write" />

            <EditText
                android:id="@+id/input_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="35px" />

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_margin="20px"
                android:src="@mipmap/pic_dialog" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="50px"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginEnd="50px"
                android:layout_marginStart="20px"
                android:src="@mipmap/pic_share" />

            <TextView
                android:id="@+id/txt_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="发送"
                android:textSize="50px"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
