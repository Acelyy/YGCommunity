<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gv_activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_pic"
        android:layout_margin="1px"
        android:background="@drawable/back_item_pic"
        android:layout_width="match_parent"
        android:layout_height="610px"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:maxLines="2"
        android:singleLine="true"
        android:text="1111111111111"
        android:textColor="@color/color_black"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2017.06.14"
            android:textColor="#999999"
            android:textSize="40px" />

        <TextView
            android:id="@+id/activity_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="议事厅"
            android:textColor="#999999"
            android:textSize="40px" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px">

        <TextView
            android:id="@+id/activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_blue"
            android:paddingEnd="10px"
            android:paddingStart="10px"
            android:text="会议"
            android:textColor="@color/colorPrimary"
            android:textSize="40px" />

        <TextView
            android:id="@+id/activity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_blue"
            android:paddingEnd="10px"
            android:paddingStart="10px"
            android:text="会议"
            android:textColor="@color/colorPrimary"
            android:textSize="40px" />

    </RelativeLayout>

</LinearLayout>