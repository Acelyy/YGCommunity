                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="40px">

                    <TextView
                        android:layout_width="300px"
                        android:layout_height="wrap_content"
                        android:text="户籍号"
                        android:textColor="#000000"
                        android:textSize="45px" />

                    <EditText
