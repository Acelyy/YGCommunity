                        android:textColor="#000000"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/political"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
