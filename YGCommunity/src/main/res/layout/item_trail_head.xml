<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="vertical"
        android:paddingEnd="30px"
        android:paddingStart="30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yonggang.ygcommunity.View.RoundAngleImageView
                android:id="@+id/bbs_head"
                android:layout_width="130px"
                android:layout_height="130px"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20px"
                android:orientation="vertical"
                android:paddingBottom="5px"
                android:paddingTop="5px">

                <TextView
                    android:id="@+id/bbs_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xiaxia"
                    android:textColor="@color/color_black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/bbs_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="2017-5-31 09:09:31"
                    android:textColor="@color/colorMainUnclick"
                    android:textSize="40px" />

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/bbs_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginTop="25px"
            android:singleLine="true"
            android:text="永联村第二届妇代会"
            android:textColor="@color/colorPrimary"
            android:textSize="40px" />

        <TextView
            android:id="@+id/bbs_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginTop="10px"
            android:text="永联村第二届妇代会"
            android:textColor="@color/color_black"
            android:textSize="40px" />

        <LinearLayout
            android:id="@+id/layout_pic"
            android:layout_width="match_parent"
            android:layout_height="280px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bbs_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/bbs_pic2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/bbs_pic3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pic2"
            android:layout_width="match_parent"
            android:layout_height="280px"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bbs_pic4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/bbs_pic5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/bbs_pic6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/pic_eye" />

            <TextView
                android:id="@+id/bbs_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="80"
                android:textSize="40px" />

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="50px"
                    android:src="@mipmap/pic_location" />

                <TextView
                    android:id="@+id/bbs_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10px"
                    android:layout_marginLeft="10px"
                    android:singleLine="true"
                    android:text="中国永联村"
                    android:textSize="35px" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>