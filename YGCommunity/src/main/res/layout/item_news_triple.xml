<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:singleLine="true"
        android:text="永钢集团和苏州理工学院成为校企合作伙伴！"
        android:textColor="@color/color_black"
        android:textSize="48px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:layout_margin="10px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/news_pic2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/news_pic3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_not_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="永钢"
                android:textColor="@color/text_login_edit"
                android:textSize="35px" />

            <TextView
                android:id="@+id/read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="永钢"
                android:textColor="@color/text_login_edit"
                android:textSize="35px" />

            <TextView
                android:id="@+id/audit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="end"
                android:text="2017-10-09"
                android:textColor="@color/text_login_edit"
                android:textSize="35px" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_text_zhiding"
                android:padding="3dp"
                android:text="置顶"
                android:textColor="#3e4e89"
                android:textSize="35px" />

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>