<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20px"
        android:layout_marginStart="20px"
        android:background="@color/colorSystemBack"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/news_pic"
            android:layout_width="match_parent"
            android:layout_height="598px"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="永联农业大丰收"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@mipmap/pic_moren" />

            <TextView
                android:id="@+id/pic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/image"
                android:text="5"
                android:textColor="@color/colorMainUnclick"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_gentie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟帖"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorMainUnclick"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/txt_gentie"
                android:text="0"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorMainUnclick"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>